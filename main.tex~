\newlength{\plotheight}
\setlength{\plotwidth} {6cm}
\setlength{\plotheight}{7cm}



\newcommand\vectll[4]{\left#1 \begin{array}{c}
    #2\\
    #3\\
  \end{array} \right#4}


\title[Time Domain FWI involving DG approximation]{\textbf{Time Domain Full Waveform Inversion \\ involving Discontinuous Galerkin\\ approximation}}


